{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "rules": {
		"no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": false
			}
		],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "jsXSingleQuote": false,
        "useTabs": true,
        "tabWidth": 2
      }
    ]
  }
}
